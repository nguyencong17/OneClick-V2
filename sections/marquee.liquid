{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
    display: flex;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    <marquee behavior="{{ section.settings.behavior }}" scrollamount="{{ section.settings.scrollamount }}" direction="{{ section.settings.direction }}">
      {%- for i in (1..section.settings.copy) -%}
        {{ section.settings.marquee_text }} &nbsp
      {%- endfor -%}
    </marquee>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.marquee.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "richtext",
        "id": "marquee_text",
        "label": "t:sections.marquee.settings.marquee_text.label",
        "info": "t:sections.marquee.settings.marquee_text.info"
      },
      {
        "type": "range",
        "id": "copy",
        "min": 1,
        "max": 10,
        "step": 1,
        "label": "t:sections.marquee.settings.copy.label",
        "info": "t:sections.marquee.settings.copy.info",
        "default": 5
      },
      {
        "type": "select",
        "id": "direction",
        "info": "t:sections.marquee.settings.direction.info",
        "options": [
          {
            "value": "left",
            "label": "t:sections.marquee.settings.direction.direction_1.label"
          }, {
            "value": "right",
            "label": "t:sections.marquee.settings.direction.direction_2.label"
          }, {
            "value": "up",
            "label": "t:sections.marquee.settings.direction.direction_3.label"
          }, {
            "value": "down",
            "label": "t:sections.marquee.settings.direction.direction_4.label"
          }
        ],
        "default": "left",
        "label": "t:sections.marquee.settings.direction.label"
      },
      {
        "type": "select",
        "id": "behavior",
        "info": "t:sections.marquee.settings.behavior.info",
        "options": [
          {
            "value": "scroll",
            "label": "t:sections.marquee.settings.behavior.behavior_1.label"
          }, {
            "value": "slide",
            "label": "t:sections.marquee.settings.behavior.behavior_2.label"
          }, {
            "value": "alternate",
            "label": "t:sections.marquee.settings.behavior.behavior_3.label"
          }
        ],
        "default": "scroll",
        "label": "t:sections.marquee.settings.behavior.label"
      }, {
        "type": "range",
        "id": "scrollamount",
        "min": 1,
        "max": 100,
        "step": 1,
        "label": "t:sections.marquee.settings.scrollamount.label",
        "info": "t:sections.marquee.settings.scrollamount.info",
        "default": 6
      }, {
        "type": "select",
        "id": "color_scheme",
        "options": [
          {
            "value": "accent-1",
            "label": "t:sections.all.colors.accent_1.label"
          },
          {
            "value": "accent-2",
            "label": "t:sections.all.colors.accent_2.label"
          },
          {
            "value": "background-1",
            "label": "t:sections.all.colors.background_1.label"
          },
          {
            "value": "background-2",
            "label": "t:sections.all.colors.background_2.label"
          }, {
            "value": "inverse",
            "label": "t:sections.all.colors.inverse.label"
          }
        ],
        "default": "background-1",
        "label": "t:sections.all.colors.label"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
    "presets": [
      {
        "name": "t:sections.marquee.presets.name"
      }
    ]
  }
{% endschema %}